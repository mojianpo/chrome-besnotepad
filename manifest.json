{
    "name": "BesNotepad",
    "version": "1.0.0",
    "description": "Record every detail in your work (Local Records)。 本地记录,记录工作中的点点滴滴，基于标签+标题方式进行内容记录，支持快速查询浏览。",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "BES Notepad",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "icons":
    {
        "16": "icon16.png",
        "48": "icon48.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "unlimitedStorage",
        "activeTab", 
        "webNavigation", 
        "management", 
        "http://*/*", 
        "https://*/*"
    ],
    "update_url": "https://www.bessystem.com/product/cbcaf2c2488043bebed4c06f2833e3f3/info?p=101"
} 